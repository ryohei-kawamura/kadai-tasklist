<%= form_for(@task) do |f| %>

<% if @task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_tasks.each do |task| %>

          <li>
<%= task %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

  <div class="form-group">

<%= f.label :status, 'ステータス' %>

<%= f.text_field :status, class: 'form-controll' %>

  </div>

  <div class="form-group">
  
<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content, class: 'btn btn-primary' %>

  </div>
  
<%= f.submit '投稿', class: 'btn btn-primary' %>

<% end %>
